package personnages;

public class Village {
	private String nom;
	private Chef chef;
	private Gaulois[] villageois;
	private int nbVillageois = 0;
	private int nbVillageoisMaximum;
	
	public Village(String nom, Chef chef, int nbVillageoisMaximum) {
		this.nom = nom;
		this.chef = chef;
		
		villageois = new Gaulois[nbVillageoisMaximum];
	}
	
	public void ajouterHabitant(Gaulois gaulois) {
		if (nbVillageois < nbVillageoisMaximum) {
			villageois[nbVillageois] = new Gaulois(gaulois.getNom(), gaulois.getForce());
			nbVillageois++;
		}
	}
	
	public Gaulois trouverHabitant(int nbVillageoisARecuperer) {
		return villageois[nbVillageoisARecuperer];
	}
	
	public String getNom() {
		return nom;
	}
	
	public void setChef(Chef chef) {
		this.chef = chef;
	}
	
	public static void main(String[] args) {
		Village village = new Village("Village des irréductibles", null, 30);
		/* Gaulois gaulois = village.trouverHabitant(30);
		 * parce qu'on a pas encore ajouter des habitants au village, 
		 * alors il ne peut pas afficher le gaulois de l'indice 30 
		 */
		
		Chef abraracourcix = new Chef("Abraracourcix", 6, 0, village);
		Gaulois asterix = new Gaulois("Astérix", 8);
		village.ajouterHabitant(asterix);
		Gaulois gaulois = village.trouverHabitant(1);
		System.out.println(gaulois);
	}
}
